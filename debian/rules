#!/usr/bin/make -f

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	python3 setup.py install --root=debian/tz-converter --install-layout=deb --install-lib=/usr/share/tz-converter --install-scripts=/usr/share/tz-converter

override_dh_python3:
	dh_python3 --shebang=/usr/bin/python3
